platform "Windows" {
    command: "@g++ $files -o $out -I*$include"; // @ means not print this command
    submoduleCommand: "*@g++ -c $files -o $out -I*$include"; // '*' indicates, that command/argument accepts one file
}

module "Sub" {
    path: "test/sub"; // Path is required for submodules, it will be addet to include path of parent module, you can add multiple paths
    files: "$path/*.cpp";
    // You can override build command here:
    // command: "@echo g++ $files -o $out -I*$include";
}

module "Main" {
    files: "test/main/*.cpp";
    submodule: "Sub";
    output: "test.exe";
    // include: "IncDir";
    // You can add multiple include statements, files, flags and submodules
    flags: "-O3";
}
